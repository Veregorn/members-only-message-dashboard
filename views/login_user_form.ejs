<div class="content">
    <h1><%= title %></h1>
    <div class="user-form">
        <form method="post">
            <div class="form-group">
                <label for="username">Email:</label>
                <input 
                    type="email" 
                    id="username" 
                    name="username" 
                    value="<%= user ? user.username : '' %>"
                    required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    value="<%= user ? user.password : '' %>"
                    required>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
        </form>
</div>